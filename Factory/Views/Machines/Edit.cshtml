@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Editor</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Type)
  @Html.EditorFor(model => model.Type)

  @Html.LabelFor(model => model.YearsInService)
  @Html.EditorFor(model => model.YearsInService)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to " + $"{@Model.Name}" + "'s details", "Details", new {id = @Model.MachineId})</p>