@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a machine</h2>

<h4>Assign a machine to @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId", ViewBag.EngineerId, "", new {})

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to machines list", "Details")</p>