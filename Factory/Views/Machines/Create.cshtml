@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a new Machine</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)
  
  @Html.LabelFor(model => model.YearsInService)
  @Html.TextBoxFor(model => model.YearsInService, new { @type = "number" })

  @Html.Label("Assign an Engineer to this machine:")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Add new machine" />
}